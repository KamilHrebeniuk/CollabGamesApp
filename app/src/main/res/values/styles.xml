<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize theme -->
        <item name="colorPrimary">@color/colorMenuBackground</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/colorText</item>
        <item name="actionButtonStyle">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Buttons styles -->

    <style name="ButtonsTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="OrangeButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:background">@color/colorLogoOrange</item>
        <item name="android:shape">rectangle</item>
    </style>

    <style name="RedButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:background">@color/colorLogoRed</item>
    </style>

    <style name="BlueButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:background">@color/colorLogoBlue</item>
    </style>



    <style name="ImageIconsTheme" parent="Theme.AppCompat">
        <item name="android:alpha">0.6</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:layout_margin">24dp</item>
    </style>


    <!-- List style -->

    <style name="ListStyle" parent="Widget.AppCompat.ListView">
        <item name="android:listSelector"></item>
    </style>
</resources>
